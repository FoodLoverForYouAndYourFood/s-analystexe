{
  "manifest_version": 3,
  "name": "Матчер вакансий",
  "description": "Проверь, подходит ли вакансия под твои хотелки",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Открыть матчер вакансий"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://d.analystexe.ru/*",
    "http://d.analystexe.ru/*",
    "http://localhost:5000/*",
    "*://*.hh.ru/*",
    "*://*.linkedin.com/*",
    "*://*.habr.com/*",
    "*://*.career.habr.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.hh.ru/*",
        "*://*.linkedin.com/*",
        "*://*.habr.com/*/vacancies/*",
        "*://*.career.habr.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
